<h3>Welcome back <b><%= current_user.first_name %></b>!</h3>
<h2>These are all the listings</h2>

<div id="tag_cloud" style="width:100%">
  <% tag_cloud Listing.tag_counts, %w[s m l] do |tag, css_class| %>
  <%= "|" %>
    <%= link_to tag.name, tag_path(tag.name), class: css_class %>
  <% end %>
</div>

<% @listing.each do |x| %>
	<div class="image">
		<% x.images.each do |y|%>
			<img class="pic img-cricle" src="<%= y %>" alt="listing_img">
		<% end %>
	</div>

	<h2>
		</b><%= link_to x.name, x %>
	</h2>
		<p>
			<b>Description: </b>
			<%= x.description %>
		</p>
		<p>
			<b>Country: </b>
			<%= x.country %>
		</p>
		<p>
			<b>City: </b>
			<%= x.city %>
		</p>


		<% unless @user.id != x.user_id %>
			<p><%= link_to 'Edit property details', edit_listing_path(x.id)  %> |
			<%= link_to "Delete now!", listing_path(x.id), method:"delete" %></p>
		<% end %>


	Tags: <%= raw x.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %>

	<hr/>

<% end %>